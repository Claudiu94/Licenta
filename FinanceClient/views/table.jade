link(rel='stylesheet', href='/stylesheets/table.css', type='text/css')
script(type='application/javascript', src='/javascripts/table.js')

.form-group.pull-right
  input.search.form-control(type='text', placeholder='What you looking for?')
span.counter.pull-right
table.table.table-hover.table-bordered.results
  thead
    tr
      th.sym Symbol
      th.col-md-5 Company Name
      th.col-md-4 Price
      th.col-md-3 Currency
    tr.warning.no-result
      td(colspan='4')
        i.fa.fa-warning
        |  No result
  tbody
    - if (typeof companies !== 'undefined')
      each item in companies
        tr.table-row(id="#{item.symbol}")
          th(scope='row') #{item.symbol}
          td #{item.companyName}
          td #{item.price}
          td #{item.currency}
